<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartWorkoutActivity"
    android:background="@drawable/gradient3"
    android:weightSum="100"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/uppercontainer"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/startworkoutheader"
            android:textSize="30dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/secondarytest2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18" />


        <LinearLayout
            android:id="@+id/bottomcontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="64"
            android:paddingTop="10dp"
            android:weightSum="100"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            >

            <Button
                android:textSize="10dp"
                android:layout_gravity="center"
                android:id="@+id/button1"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:backgroundTint="@color/white"
                android:onClick="workout1"
                android:text="1. Wokrout1"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/black"
                android:gravity="left|center_vertical"/>

            <Button
                android:textSize="10dp"
                android:onClick="workout2"
                android:layout_gravity="center"
                android:id="@+id/button2"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:backgroundTint="@color/white"
                android:text="1. Wokrout1"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/black"
                android:gravity="left|center_vertical"/>

            <Button
                android:textSize="10dp"
                android:onClick="workout3"
                android:layout_gravity="center"
                android:id="@+id/button3"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:backgroundTint="@color/white"
                android:text="1. Wokrout1"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/black"
                android:gravity="left|center_vertical"/>

            <Button
                android:textSize="10dp"
                android:onClick="workout4"
                android:layout_gravity="center"
                android:id="@+id/button4"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:backgroundTint="@color/white"
                android:text="1. Wokrout1"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/black"
                android:gravity="left|center_vertical"/>

            <Button
                android:textSize="10dp"
                android:onClick="workout5"
                android:layout_gravity="center"
                android:id="@+id/button5"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:backgroundTint="@color/white"
                android:text="1. Wokrout1"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/black"
                android:layout_marginBottom="100dp"
                android:gravity="left|center_vertical"/>

            <Button
                android:id="@+id/buttonStart"
                android:onClick="startButton"
                android:layout_gravity="center"
                android:layout_width="190dp"
                android:layout_height="0dp"
                android:layout_weight="11"
                android:text="Start"
                android:backgroundTint="@color/gStart"
                android:background="@drawable/round_button"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="28"/>



    </LinearLayout>



</LinearLayout>